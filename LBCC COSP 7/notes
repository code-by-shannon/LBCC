Programming Exercise 12

#include <iostream>
using namespace std;

int main()
{
    float tempC;

    cout << "Enter a temperature in Celsius."  << endl;
    cin >> tempC;
    float conversion = (9.0/5.0) * tempC + 32;
    
    cout << "here is your celsius value in fahrenheit: ";
    cout << conversion;
    return 0;

}


